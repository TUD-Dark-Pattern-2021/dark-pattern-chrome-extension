{
    "name": "DPD",
    "version": "0.0.1",
    "description": "Dark Pattern Detector",
    "manifest_version": 3,
    "background": {
        "service_worker": "background-scripts/background.js"
    },

    "content_scripts": [{
        "js": ["content-scripts/HTMLgrabber.js", "js/jquery.min.js", "content-scripts/highlight_DP.js", "js/chart.min.js", "content-scripts/iconRemover.js"],
        "matches": ["<all_urls>", "http://*/*", "https://*/*"],
        "css": ["css/highlight.css", "css/toast.css"],
        "run_at": "document_end"
    }],
    "permissions": ["scripting", "activeTab", "tabs", "webNavigation", "storage", "unlimitedStorage"],
    "action": {
        "default_popup": "popup-scripts/MainWindow.html",
        "default_title": "Click to show and alert"
    },
    "host_permissions": ["<all_urls>"],

    "web_accessible_resources": [{
        "resources": ["images/*.png"],
        "matches": ["<all_urls>", "http://*/*", "https://*/*"]
    }]
}